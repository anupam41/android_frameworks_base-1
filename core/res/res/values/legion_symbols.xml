<resources>

    <!-- Device keyhandlers -->
    <java-symbol type="array" name="config_deviceKeyHandlerLibs" />
    <java-symbol type="array" name="config_deviceKeyHandlerClasses" />

    <!-- Package Manager -->
    <java-symbol type="array" name="config_deviceDisabledComponents" />
    <java-symbol type="array" name="config_globallyDisabledComponents" />
    <java-symbol type="array" name="config_forceEnabledComponents" />

    <!-- Whether to cleanup fingerprints upon connection to the daemon and when user switches -->
    <java-symbol type="bool" name="config_cleanupUnusedFingerprints" />

    <!-- Vendor platform signatures -->
    <java-symbol type="array" name="config_vendorPlatformSignatures" />

    <!-- Path to fast charging status file to detect whether an oem fast charger is active -->
    <java-symbol type="string" name="config_oemFastChargerStatusPath" />

    <!-- Expected value from fast charging status file -->
    <java-symbol type="string" name="config_oemFastChargerStatusValue" />

    <!-- Proximity check on wake -->
    <java-symbol type="bool" name="config_proximityCheckOnWake" />
    <java-symbol type="integer" name="config_proximityCheckTimeout" />
    <java-symbol type="bool" name="config_proximityCheckOnWakeEnabledByDefault" />

    <!-- Advanced reboot -->
    <java-symbol type="string" name="reboot_to_recovery_title" />
    <java-symbol type="string" name="reboot_to_recovery_message" />
    <java-symbol type="string" name="reboot_to_bootloader_title" />
    <java-symbol type="string" name="reboot_to_bootloader_message" />
    <java-symbol type="string" name="reboot_title" />
    <java-symbol type="string" name="reboot_message" />

    <!-- Battery Leds -->
    <java-symbol type="bool" name="config_intrusiveBatteryLed" />

    <!-- For dynamic default font styles -->
    <java-symbol type="string" name="config_bodyFontFamily" />

    <!-- Location indicator -->
    <java-symbol type="drawable" name="stat_sys_location" />

    <!-- Enable face auth only when swiping security view -->
    <java-symbol type="bool" name="config_faceAuthOnlyOnSecurityView" />

    <!-- App lock -->
    <java-symbol type="string" name="unlock_application" />
    <java-symbol type="array" name="config_appLockAllowedSystemApps" />

    <!-- Parallel space badge -->
    <java-symbol type="string" name="parallel_space_badge_label" />
    <java-symbol type="drawable" name="ic_parallel_badge" />
    <java-symbol type="drawable" name="ic_parallel_icon_badge" />

    <!-- Parallel space badge colors --> 
    <java-symbol type="color" name="parallel_badge_1" />
    <java-symbol type="color" name="parallel_badge_2" />
    <java-symbol type="color" name="parallel_badge_3" />
    <java-symbol type="color" name="parallel_badge_4" />
    <java-symbol type="color" name="parallel_badge_5" />
    <java-symbol type="color" name="parallel_badge_6" />
    <java-symbol type="color" name="parallel_badge_7" />
    <java-symbol type="color" name="parallel_badge_8" />
    <java-symbol type="color" name="parallel_badge_9" />

    <!-- Parallel Space -->
    <java-symbol type="integer" name="config_parallelSpaceMaxCount" />
    <java-symbol type="array" name="config_parallelSpaceWhitelist" />
    <java-symbol type="array" name="config_parallelSpaceBlocklist" />

    <!-- Whether to cancel fingerprint operation if not idle -->
    <java-symbol type="bool" name="config_fpCancelIfNotIdle" />

    <!-- Button and keyboard backlight -->
    <java-symbol type="integer" name="config_deviceSupportsButtonBrightnessControl" />
    <java-symbol type="integer" name="config_deviceSupportsKeyboardBrightnessControl" />
    <java-symbol type="dimen" name="config_buttonBrightnessSettingDefaultFloat" />
    <java-symbol type="dimen" name="config_keyboardBrightnessSettingDefaultFloat" />

    <!-- Whether device can force navbar disabling -->
    <java-symbol type="bool" name="config_canForceDisableNavigationBar" />

    <!-- Whether device supports gestures on fingerprint sensor -->
    <java-symbol type="bool" name="config_supportsGesturesOnFingerprintSensor" />

    <!-- Device hardware keys -->
    <java-symbol type="integer" name="config_deviceHardwareKeys" />
    <java-symbol type="integer" name="config_deviceHardwareWakeKeys" />

    <!-- Device keys user-customisable behavior -->
    <java-symbol type="integer" name="config_longPressOnHomeBehavior" />
    <java-symbol type="integer" name="config_doubleTapOnHomeBehavior" />
    <java-symbol type="integer" name="config_longPressOnMenuBehavior" />
    <java-symbol type="integer" name="config_longPressOnAppSwitchBehavior" />

    <!-- Camera key type -->
    <java-symbol type="bool" name="config_singleStageCameraKey" />

</resources>
